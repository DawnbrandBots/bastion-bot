{
	"name": "bastion-bot",
	"version": "0.0.1",
	"repository": "https://github.com/DawnbrandBots/bastion-bot.git",
	"author": "Kevin Lu",
	"contributors": [
		"Luna Brand"
	],
	"license": "AGPL-3.0-or-later",
	"private": true,
	"scripts": {
		"start": "node --enable-source-maps -r dotenv/config -r reflect-metadata dist",
		"register": "node --enable-source-maps -r dotenv/config -r reflect-metadata dist --deploy-slash",
		"build": "tsc",
		"clean": "tsc --build --clean",
		"test": "jest test/unit",
		"test:contract": "jest test/contract",
		"test:integration": "env DOTENV_CONFIG_PATH=.env.test jest test/integration --setupFiles=dotenv/config --coverage=false --runInBand",
		"lint": "eslint src test"
	},
	"engines": {
		"node": ">=20",
		"yarn": "1.22.x"
	},
	"dependencies": {
		"@sinclair/typebox": "^0.32.20",
		"basic-ftp": "^5.0.5",
		"better-sqlite3": "^9.4.1",
		"debug": "^4.3.4",
		"discord-markdown": "2.5.1",
		"discord.js": "^14.14.1",
		"dotenv": "^16.4.1",
		"gettext-parser": "^6.0.0",
		"got": "^11.8.6",
		"htmlparser2": "^9.1.0",
		"mnemonist": "^0.39.8",
		"reflect-metadata": "^0.2.1",
		"supports-color": "^9.4.0",
		"tsyringe": "^4.8.0",
		"ttag": "^1.8.5",
		"ydeck": "^0.2.10",
		"ydke": "^1.1.0"
	},
	"devDependencies": {
		"@alphakretin/essentials": "^6.0.0",
		"@types/better-sqlite3": "^7.6.9",
		"@types/debug": "^4.1.12",
		"@types/gettext-parser": "^4.0.4",
		"@types/jest": "^29.5.12",
		"@types/whatwg-mimetype": "^3.0.2",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.2",
		"ttag-cli": "^1.10.10",
		"whatwg-mimetype": "^4.0.0"
	},
	"optionalDependencies": {
		"bufferutil": "^4.0.8",
		"utf-8-validate": "^6.0.3",
		"zlib-sync": "^0.1.9"
	},
	"resolutions": {
		"@types/node": "^20.11.0",
		"http2-wrapper": "^2.2.1",
		"make-dir": "^4.0.0",
		"semver": "^7.5.4",
		"undici": "^5.27.2"
	},
	"jest": {
		"clearMocks": true,
		"collectCoverage": true,
		"coverageDirectory": "coverage",
		"coverageProvider": "v8",
		"preset": "ts-jest",
		"setupFiles": [
			"reflect-metadata"
		]
	},
	"eslintConfig": {
		"extends": "@alphakretin"
	},
	"prettier": "@alphakretin/essentials"
}
