{
	"name": "bastion-bot",
	"version": "0.0.1",
	"repository": "https://github.com/DawnbrandBots/bastion-bot.git",
	"author": "Kevin Lu",
	"contributors": [
		"Luna Brand"
	],
	"license": "AGPL-3.0-or-later",
	"private": true,
	"scripts": {
		"start": "node --enable-source-maps -r dotenv/config -r reflect-metadata dist",
		"register": "node --enable-source-maps -r dotenv/config -r reflect-metadata dist --deploy-slash",
		"build": "tsc",
		"clean": "tsc --build --clean",
		"test": "jest test/unit",
		"test:contract": "jest test/contract",
		"test:integration": "env DOTENV_CONFIG_PATH=.env.test jest test/integration --setupFiles=dotenv/config --coverage=false --runInBand",
		"lint": "eslint src test"
	},
	"engines": {
		"node": ">=20",
		"yarn": "1.22.x"
	},
	"dependencies": {
		"@sinclair/typebox": "^0.34.41",
		"better-sqlite3": "^12.4.1",
		"debug": "^4.4.3",
		"discord-markdown": "2.5.1",
		"discord.js": "~14.25.1",
		"dotenv": "^17.2.3",
		"gettext-parser": "^6.0.0",
		"got": "^11.8.6",
		"htmlparser2": "^10.0.0",
		"immutable": "^5.1.4",
		"mnemonist": "^0.40.3",
		"reflect-metadata": "^0.2.2",
		"supports-color": "^10.2.2",
		"tsyringe": "^4.10.0",
		"ttag": "^1.8.7",
		"ydeck": "^0.2.10",
		"ydke": "^1.1.0"
	},
	"devDependencies": {
		"@alphakretin/essentials": "^6.2.0",
		"@microsoft/eslint-formatter-sarif": "^3.1.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/debug": "^4.1.12",
		"@types/gettext-parser": "^4.0.4",
		"@types/jest": "^30.0.0",
		"@types/whatwg-mimetype": "^3.0.2",
		"jest": "^30.2.0",
		"ts-jest": "^29.4.5",
		"ttag-cli": "^1.11.2",
		"whatwg-mimetype": "^4.0.0"
	},
	"optionalDependencies": {
		"bufferutil": "^4.0.8",
		"zlib-sync": "^0.1.10"
	},
	"resolutions": {
		"@types/node": "^20.16.10",
		"cross-spawn": "^7.0.6",
		"http2-wrapper": "^2.2.1",
		"koa": "link:./test/package-stub",
		"koa-router": "link:./test/package-stub",
		"koa-body": "link:./test/package-stub",
		"open": "link:./test/package-stub",
		"semver": "^7.6.3",
		"svelte": "link:./test/package-stub"
	},
	"jest": {
		"clearMocks": true,
		"collectCoverage": true,
		"coverageDirectory": "coverage",
		"coverageProvider": "v8",
		"preset": "ts-jest",
		"setupFiles": [
			"reflect-metadata"
		]
	},
	"eslintConfig": {
		"extends": "@alphakretin"
	},
	"prettier": "@alphakretin/essentials"
}
