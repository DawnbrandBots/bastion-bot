{
	"name": "bastion-bot",
	"version": "0.0.1",
	"repository": "https://github.com/DawnbrandBots/bastion-bot.git",
	"author": "Kevin Lu",
	"contributors": [
		"Luna Brand"
	],
	"license": "AGPL-3.0-or-later",
	"private": true,
	"scripts": {
		"start": "node --enable-source-maps -r dotenv/config -r reflect-metadata dist",
		"register": "node --enable-source-maps -r dotenv/config -r reflect-metadata dist --deploy-slash",
		"build": "tsc",
		"clean": "tsc --build --clean",
		"test": "jest",
		"lint": "eslint src test"
	},
	"engines": {
		"node": ">=18",
		"yarn": "1.22.x"
	},
	"dependencies": {
		"@sinclair/typebox": "^0.25.24",
		"basic-ftp": "^5.0.2",
		"better-sqlite3": "^8.2.0",
		"debug": "^4.3.4",
		"discord-markdown": "2.5.1",
		"discord.js": "^14.8.0",
		"dotenv": "^16.0.3",
		"gettext-parser": "^6.0.0",
		"got": "^11.8.6",
		"htmlparser2": "^8.0.1",
		"mnemonist": "^0.39.5",
		"reflect-metadata": "^0.1.13",
		"supports-color": "^9.3.1",
		"tsyringe": "^4.7.0",
		"ttag": "^1.7.24",
		"ydeck": "^0.2.10",
		"ydke": "^1.1.0"
	},
	"devDependencies": {
		"@alphakretin/essentials": "^5.0.0",
		"@types/better-sqlite3": "^7.6.3",
		"@types/debug": "^4.1.7",
		"@types/gettext-parser": "^4.0.2",
		"@types/jest": "^29.4.0",
		"jest": "^29.5.0",
		"ts-jest": "^29.0.5",
		"ttag-cli": "^1.10.5"
	},
	"optionalDependencies": {
		"bufferutil": "^4.0.7",
		"erlpack": "discord/erlpack",
		"utf-8-validate": "^6.0.3",
		"zlib-sync": "^0.1.8"
	},
	"resolutions": {
		"@types/node": "^18.15.0"
	},
	"babel": {
		"plugins": [
			[
				"@babel/plugin-proposal-decorators",
				{
					"legacy": true
				}
			],
			[
				"@babel/plugin-proposal-class-properties",
				{
					"loose": true
				}
			],
			[
				"@babel/plugin-proposal-private-property-in-object",
				{
					"loose": true
				}
			],
			[
				"@babel/plugin-proposal-private-methods",
				{
					"loose": true
				}
			]
		]
	},
	"jest": {
		"clearMocks": true,
		"collectCoverage": true,
		"coverageDirectory": "coverage",
		"coverageProvider": "v8",
		"preset": "ts-jest",
		"setupFiles": [
			"reflect-metadata"
		]
	},
	"eslintConfig": {
		"extends": "@alphakretin"
	},
	"prettier": "@alphakretin/essentials"
}
